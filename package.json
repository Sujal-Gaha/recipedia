{
  "name": "@recipedia/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev:frontend": "npx nx run frontend:serve",
    "dev:backend": "npx nx run backend:serve",

    "build:frontend": "npx nx run frontend:build",
    "build:backend": "npx nx run backend:build --configuration=production",
    "build": "yarn build:frontend && yarn build:backend",

    "build:lib-auth": "npx nx run auth:build",
    "build:lib-database": "npx nx run database:build",
    "build:lib-contract": "npx nx run contract:build",
    "build:lib-quasar": "npx nx run quasar:build",
    "build:lib": "yarn build:lib-auth && yarn build:lib-database && yarn build:lib-contract && yarn build:lib-quasar",

    "build:armageddon": "yarn build && yarn build:lib",
    
    "db:generate": "npx prisma generate --schema=libs/database/src/prisma/schema.prisma",
    "db:migrate": "npx prisma migrate dev --schema=libs/database/src/prisma/schema.prisma",
    "db:migrate-reset": "npx prisma migrate reset --force --schema=libs/database/src/prisma/schema.prisma",
    "db:push": "npx prisma db push --schema=libs/database/src/prisma/schema.prisma",

    "auth:generate": "npx @better-auth/cli@latest generate --config=libs/auth/src/lib/auth-server --output=libs/database/src/prisma/schema.prisma"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/esbuild": "21.1.1",
    "@nx/eslint": "21.1.1",
    "@nx/eslint-plugin": "21.1.1",
    "@nx/js": "21.1.1",
    "@nx/node": "^21.1.1",
    "@nx/react": "^21.1.1",
    "@nx/vite": "21.1.1",
    "@nx/web": "21.1.1",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^3.0.0",
    "autoprefixer": "10.4.13",
    "esbuild": "^0.19.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.1.1",
    "postcss": "8.4.38",
    "prettier": "^2.6.2",
    "tailwindcss": "3.4.3",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.19.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "libs/database",
    "libs/contract",
    "libs/quasar",
    "libs/auth"
  ],
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "@ts-rest/core": "^3.52.1",
    "@ts-rest/express": "^3.52.1",
    "better-auth": "^1.2.8",
    "express": "^4.21.2",
    "http-status-codes": "^2.3.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "zod": "^3.25.20"
  }
}
